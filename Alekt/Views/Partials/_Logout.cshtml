@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Umbraco.Web

@if (Umbraco.MemberIsLoggedOn())
{
    using (Html.BeginUmbracoForm("SubmitLogout", "Member", System.Web.Mvc.FormMethod.Post, new { id = "logout" }))
    {
        @Html.AntiForgeryToken()
        var myUser = System.Web.Security.Membership.GetUser();
        if (myUser != null)
        {
            <p><span>Logged in as</span> <strong>@myUser.UserName</strong></p>
            <button name="login" type="submit" class="btn btn-primary logout"><span>Logout</span><span>&nbsp;</span><span class="glyphicon glyphicon-arrow-right"></span></button>
        }
    }
}
